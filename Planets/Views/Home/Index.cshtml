@Model SimulationViewModel

<section id="header">
    <div class="container">
        <header>
            <!-- HEADLINE -->
            <h1 data-animated="GoIn"><b>3650</b> días simulados</h1>
        </header>
        <!-- START TIMER -->
        <div id="timer" data-animated="FadeIn">
            <p id="message"></p>
            <div id="days" class="timer_box"><h1>@Model.RainyDays</h1><p>Períodos de Lluvia</p></div>
            <div id="hours" class="timer_box"><h1>@Model.DroughtDays</h1><p>Períodos de Sequía</p></div>
            <div id="minutes" class="timer_box"><h1>@Model.OptimalDays</h1><p>Condiciones Optimas</p></div>
        </div>
        <!-- END TIMER -->
        <div class="col-lg-4 col-lg-offset-4 mt centered">
            <h4>El día máximo de lluvia sera el día @Model.MaxRainDay</h4>
        </div>
    </div>
    <!-- LAYER OVER THE SLIDER TO MAKE THE WHITE TEXTE READABLE -->
    <div id="layer"></div>
    <!-- END LAYER -->
    <!-- START SLIDER -->
    <div id="slider" class="rev_slider">
        <ul>
            <li data-transition="slideleft" data-slotamount="1" data-thumb="assets/img/slider/1.jpg">
                <img src="~/Content/Images/1.jpg">
            </li>
            <li data-transition="slideleft" data-slotamount="1" data-thumb="assets/img/slider/2.jpg">
                <img src="~/Content/Images/2.jpg">
            </li>
            <li data-transition="slideleft" data-slotamount="1" data-thumb="assets/img/slider/3.jpg">
                <img src="~/Content/Images/3.jpg">
            </li>
        </ul>
    </div>
    <!-- END SLIDER -->
</section>